{
    "manifest_version": 2,

    "name": "D3 Annotator",
    "description": "This extension allows the user to annotate and record activities performed on d3.js visualizations.",
    "version": "1.0",
    "icons": { "128": "d3logo.png" },
    "content_scripts": [
        {
            "matches": ["file:///*/*", "http://*/*", "https://*/*"],
            "css": ["content.css"],
            "js": ["lib/underscore.js", "lib/d3.js", "lib/jquery.js", "js/content.js"]
        }
    ],

    "background": {
        "scripts": ["js/background.js"]
    },

    "page_action": {
        "default_name": "D3 Deconstructor",
        "default_icon": "d3logo.png"
    },

    "permissions": [
        "tabs",
        "activeTab",
        "https://secure.flickr.com/"
    ],

    "web_accessible_resources": [
        "js/display.js",
        "js/injected.js",
        "js/d3check.js",
        "js/VisInfo.js",
        "lib/sylvester.js",
        "lib/bootstrap.js",
        "lib/simple_statistics.js",
        "lib/underscore.js",
        "lib/d3.v3.min.js",
        "lib/jquery.js",
        "lib/FileSaver.js"
    ],

    "content_security_policy": "script-src 'unsafe-eval' 'self'; object-src 'self'"
}
