{
    "manifest_version": 2,

    "name": "D3 Annotator",
    "description": "This extension allows the user to annotate and record activities performed on d3.js visualizations.",
    "version": "1.0",
    "icons": { "128": "d3logo.png" },
    "content_scripts": [
        {
            "matches": ["file:///*/*", "http://*/*", "https://*/*"],
            "css": ["content.css"],
            "js": ["lib/underscore.js", "lib/d3.js", "lib/jquery.js", "content.js"]
        }
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "page_action": {
        "default_name": "D3 Deconstructor",
        "default_icon": "d3logo.png"
    },

    "permissions": [
        "tabs",
        "activeTab",
        "https://secure.flickr.com/"
    ],

    "web_accessible_resources": [
        "lib/underscore.js",
        "display.js",
        "lib/d3.v3.min.js",
        "injected.js",
        "d3check.js",
        "lib/jquery.dataTables.js",
        "lib/jquery-ui.js",
        "lib/jquery.js",
        "lib/FileSaver.js"
    ]
}
